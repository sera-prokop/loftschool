.header{
    background-color: rgba(0, 0, 0, 0.3);
    position: fixed;
    width: 100%;
    z-index: 100;
}
.header__container{
    display: flex;
    align-items: center;
    justify-content: space-between;
    //padding: 30px;
}

.header__logo{
    font-size: 36px;
    font-weight: 800;
    color: $white;
}

.header__social{
    display: none;
    @include phones{
        display: block;
    }
}

// Menu style

.menu{
    display: none;
    @include tablets{
        display: block;
    }
}

.menu__list{
    display: flex;
}

.menu__item{
    display: flex;
    @include tablets{
        //margin-right: 20px;
    }
    @include desktop{
        //margin-right: 60px;
    }

    &:last-child{
        margin-right: 0;
    }
}

.menu__link{
    position: relative;
    color: $white;
    text-decoration: none;
    font-weight: 600;
    transition: color $tr;
    @include tablets{
        padding: 45px 5px;
        font-size: 15px;
    }
    @include desktop{
        padding: 45px 30px;
        font-size: 16px;
    }
    &:after{
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        height: 3px;
        width: 100%;
        background-color: $orange;
        visibility: hidden;
        opacity: 0;
        transition: opacity $tr;
    }
    &:hover{
        color: $orange;
        &:after{
            visibility: visible;
            opacity: 1;
        }
    }

}//end menu style

// Social icon style

.social{
    display: flex;
}

.social__link{
    //margin-right: 40px;
    padding: 20px;
    &:last-child{
        margin-right: 0;
    }
    &:hover{
        .social__icon{
            fill: $orange;
        }
    }
}

.social__icon{
    fill: rgba(255, 255, 255, 0.3);
    transition: fill $tr;
}//end social icon style




// Burger style

.burger{
    @include tablets{
        display: none;
    }
}

.burger__line,
.burger__line:after,
.burger__line:before{
    height: 4px;
    width: 24px;
    display: block;
    background-color: $white;
}


.burger__line{
    position: relative;

    &:after{
        content: '';
        position: absolute;
        top: 9px;
    }
    &:before{
        content: '';
        position: absolute;
        bottom: 9px;
    }
}//end burger style

